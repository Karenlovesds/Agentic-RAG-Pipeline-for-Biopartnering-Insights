[Unit]
Description=Biopartnering Insights Pipeline
After=network.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Agentic-RAG-Pipeline-for-Biopartnering-Insights
Environment=PATH=/home/ubuntu/miniconda3/envs/pipe_env/bin
ExecStart=/home/ubuntu/miniconda3/envs/pipe_env/bin/python run_production.py --mode daemon
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/ubuntu/Agentic-RAG-Pipeline-for-Biopartnering-Insights

[Install]
WantedBy=multi-user.target
